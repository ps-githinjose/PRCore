
@model PayRollV1.Models.Employee

@{
    ViewData["Title"] = "Add Salary Details";
}

<h2>Add Salary Details</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSalary">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="display-field">
                <input  type="hidden" asp-for="EmpID" value="@Model.EmpID" class="form-control" />
               

            </div>
           
            <div class="form-group">
                <label asp-for="BasicPay" class="control-label"></label>
                <input asp-for="BasicPay" class="form-control" />
                <span asp-validation-for="BasicPay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HRA" class="control-label"></label>
                <input asp-for="HRA" class="form-control" />
                <span asp-validation-for="HRA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TA" class="control-label"></label>
                <input asp-for="TA" class="form-control" />
                <span asp-validation-for="TA" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>





